package org.example;

public class Deductions {
    private int id;
    private String description;
    private String details;
    private String date;
    private String amount;

    public void calculate() {
        // implementation
    }

    public void update() {
        // implementation
    }

    // Getters and setters for private field id
    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    public String getDetails() {
        return details;
    }

    public void setDetails(String details) {
        this.details = details;
    }

    public String getDate() {
        return date;
    }

    public void setDate(String date) {
        this.date = date;
    }

    public String getAmount() {
        return amount;
    }

    public void setAmount(String amount) {
        this.amount = amount;
    }

    public static void main(String[] args) {
        Deductions deductions = new Deductions();
        deductions.setId(1);
        deductions.setDescription("Health insurance");
        deductions.setDetails("Monthly deduction for employee 1");
        deductions.setDate("2023-05-15");
        deductions.setAmount("200");
        System.out.println("Deductions ID: " + deductions.getId());
        System.out.println("Description: " + deductions.getDescription());
        System.out.println("Details: " + deductions.getDetails());
        System.out.println("Date: " + deductions.getDate());
        System.out.println("Amount: " + deductions.getAmount());
    }
}
